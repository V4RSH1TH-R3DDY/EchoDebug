{
  "name": "echodebug",
  "displayName": "EchoDebug",
  "description": "Voice-controlled AI debugger for VS Code",
  "version": "0.1.0",
  "publisher": "echodebug",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Debuggers",
    "Other"
  ],
  "activationEvents": [
    "onCommand:echodebug.talk",
    "onCommand:echodebug.stopListening",
    "onView:echodebug.panel"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "echodebug.talk",
        "title": "EchoDebug: Start Voice Command",
        "icon": "$(mic)"
      },
      {
        "command": "echodebug.stopListening",
        "title": "EchoDebug: Stop Listening",
        "icon": "$(mic-filled)"
      },
      {
        "command": "echodebug.explainSelection",
        "title": "EchoDebug: Explain Selection"
      },
      {
        "command": "echodebug.findSymbol",
        "title": "EchoDebug: Find Symbol"
      },
      {
        "command": "echodebug.openSettings",
        "title": "EchoDebug: Open Settings"
      },
      {
        "command": "echodebug.buildIndex",
        "title": "EchoDebug: Build Code Index"
      },
      {
        "command": "echodebug.showPanel",
        "title": "EchoDebug: Show Panel"
      }
    ],
    "keybindings": [
      {
        "command": "echodebug.talk",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "echodebug",
          "title": "EchoDebug",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "echodebug": [
        {
          "type": "webview",
          "id": "echodebug.panel",
          "name": "Voice Commands"
        }
      ]
    },
    "configuration": {
      "title": "EchoDebug",
      "properties": {
        "echodebug.backendUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "EchoDebug backend server URL"
        },
        "echodebug.autoStartBackend": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start backend server on activation"
        },
        "echodebug.enableVoiceFeedback": {
          "type": "boolean",
          "default": false,
          "description": "Enable voice feedback (text-to-speech)"
        },
        "echodebug.highlightColor": {
          "type": "string",
          "default": "#ffd70080",
          "description": "Color for highlighting code matches"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.40.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
